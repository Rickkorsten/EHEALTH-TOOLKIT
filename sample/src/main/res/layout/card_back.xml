<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_weight="2"
    android:background="#a6c"
    android:gravity="bottom"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/elevation_large">


    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="#444" />

    <TextView
        android:id="@+id/categorieinhoud"
        android:layout_width="360dp"
        android:layout_height="370dp"
        android:layout_marginBottom="-10px"
        android:padding="12dp"
        android:rotation="-90"
        android:text="Conceptinggggg"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/inzetinhoud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/kaartcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titelinhoud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/magenta"
                android:paddingBottom="14dp"
                android:paddingTop="8dp"
                android:text="Video prototype"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="normal" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Doel"
                        android:textColor="#444"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/doelinhoud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Een video prototype maken zodat je andere een impressie kan geven"
                        android:textColor="#666"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Uitkomst"
                        android:textColor="#444"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/uitvoeringinhoud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Je idee kunnen delen met andere en zo meer feedback krijgen"
                        android:textColor="#666"
                        android:textSize="19dp"
                        android:paddingBottom="20dp"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>