<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="550dp"
    android:background="#a6c"
    android:padding="16dp"
    android:gravity="bottom"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/elevation_large"
    android:layout_weight="2"
    android:layout_gravity="center">



    <ImageView
        android:src="@color/blue"
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="fOTO">

    </ImageView>

    <TextView
        android:id="@+id/categorieinhoud"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:text="Concepting"
        android:textSize="45px"
        android:textColor="@color/black"
        android:rotation="-90"
        android:layout_marginBottom="-10px"/>

    <TextView style="?android:textAppearanceSmall"
        android:id="@+id/titelinhoud"
        android:textColor="#000"
        android:textStyle="normal"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="Video prototype"
        android:textSize="30dp"
        android:background="@color/white"
        android:layout_marginTop="250dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Doel"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/doelinhoud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-18dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Een video prototype maken zodat je andere een impressie kan geven" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="125dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Uitkomst"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/uitvoeringinhoud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-18dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Je idee kunnen delen met andere en zo meer feedback krijgen" />
        </LinearLayout>
        <TextView
            android:id="@+id/inzetinhoud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>